#include <stdio.h>
main()
{
	int lin,col, i;
	i = 5;
	int mat[3][3];
	for (lin=0; lin<=2; lin++)
	{
		for (col=0; col<=2; col++)
		{
 			printf("Digite o elemento da linha %d, coluna %d da matriz: ",lin+1,col+1);
 			scanf("%d", &mat[lin][col]);
		}
	}
	
	printf("Matriz original:\n");
	for (lin=0; lin<=2; lin++)
	{
		for (col=0; col<=2; col++)
		{
 			printf("%d\t",mat[lin][col]);
		}
	printf ("\n");
	}
	
	printf("Matriz multiplicada por 5:\n");
	for (lin=0; lin<=2; lin++)
	{
		for (col=0; col<=2; col++)
		{
 			printf("%d\t",mat[lin][col]*i);
		}
	printf ("\n");
	}
	return 0;
}
